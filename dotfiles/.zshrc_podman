# Start Podman machine als hij nog niet draait
if ! podman machine list --format '{{.Running}}' | grep -q true; then
    echo "Starting Podman machine..."
    podman machine start
fi

# Zet DOCKER_HOST automatisch
export DOCKER_HOST="unix://$(podman machine inspect --format '{{.ConnectionInfo.PodmanSocket.Path}}' 2>/dev/null || echo "$HOME/.local/share/containers/podman/machine/podman-machine-default/podman.sock")"
